<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?background" >

    <LinearLayout
        android:id="@id/layout_post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4.0dip"
        android:gravity="bottom"
        android:orientation="vertical" >

        <EditText
            android:id="@id/et_additional"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4.0dip"
            android:background="@color/hipda"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:inputType="none"
            android:text=""
            android:textSize="16.0sp" />

        <Spinner
            android:id="@id/sp_fid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@id/et_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:hint="@string/hint_subject"
            android:inputType="none"
            android:singleLine="true"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@id/et_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:singleLine="false"
            android:textSize="16.0sp" />

        <TabHost
            android:id="@id/th_emoji"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4.0dip" >

                    <net.jejer.hipda.ui.ExpandableHeightGridView
                        android:id="@id/tab1_emoji"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="40.0dip"
                        android:gravity="center"
                        android:horizontalSpacing="2.0dip"
                        android:isScrollContainer="false"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="2.0dip" />

                    <net.jejer.hipda.ui.ExpandableHeightGridView
                        android:id="@id/tab2_emoji"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="40.0dip"
                        android:gravity="center"
                        android:horizontalSpacing="2.0dip"
                        android:isScrollContainer="false"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="2.0dip" />

                    <net.jejer.hipda.ui.ExpandableHeightGridView
                        android:id="@id/tab3_emoji"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="40.0dip"
                        android:gravity="center"
                        android:horizontalSpacing="2.0dip"
                        android:isScrollContainer="false"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="2.0dip" />
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</ScrollView>